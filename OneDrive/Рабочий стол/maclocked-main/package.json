{
  "name": "school-schedule",
  "version": "1.0.0",
  "description": "Інтерактивний розклад занять із офлайн-режимом та PWA",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "node scripts/sync-data.mjs && vite",
    "build": "rimraf dist && node scripts/sync-data.mjs && vite build",
    "preview": "vite preview --host 127.0.0.1 --port 4173",
    "lint": "eslint \"{src,scripts,tests}/**/*.{js,jsx,mjs,cjs}\" --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:unit": "vitest run",
    "test:e2e": "start-server-and-test \"npm run preview\" http://127.0.0.1:4173 \"playwright test\"",
    "test": "npm run test:unit && npm run build && npm run test:e2e",
    "generate:icons": "node scripts/generate-icons.mjs",
    "import:schedule": "node scripts/import-schedule.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neverluckskr/maclocked.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/neverluckskr/maclocked/issues"
  },
  "homepage": "https://github.com/neverluckskr/maclocked#readme",
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "*.{css,html,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "lint-staged": "^16.2.6",
    "pngjs": "^7.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "start-server-and-test": "^2.1.2",
    "tailwindcss": "^3.4.17",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
